<h3>Listando câmeras</h3>

<p id="notice"><%= notice %></p>

<table style="text-align: center;">
  <tr>
    <th>Nome</th>
    <th>Câmera ID</th>
    <th>Servidor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% Camera::all.each do |camera| %>
      <tr>
        <!--<td><%= check_box_tag :checked %></td>-->
        <td><%= camera.label %></td>
        <td><%= camera.camera_id %></td>
        <td><%= Server::find_by_id(camera.server_id).label rescue 'NIL' %> (#<%= camera.server_id %>)</td>
        <td><%= button_to 'Mostrar', camera, method: :get %></td>
        <td><%= button_to 'Editar', edit_camera_path(camera), method: :get %></td>
        <td><%= button_to 'Apagar', camera, method: :delete, data: {confirm: 'Tem certeza?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<table>
  <tr>
    <td>
      <%= button_to 'Nova câmera', new_camera_path, method: :get %>
    </td>
    <td>
      <%= button_to 'Cadastrar cameras em lote', batch_new_cameras_path, method: :get %>
    </td>
    <td>
      <%= button_to 'Retornar', admin_path, method: :get %>
    </td>
  </tr>
</table>
