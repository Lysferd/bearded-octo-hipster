  <% @servers.each do |server| %>
      <tr>
        <td><%= server.label %></td>
        <td><%= server.address %></td>
        <td><%= server.username %></td>
        <td><%= Warehouse::find_by_id(server.warehouse_id).label rescue 'NIL' %> (#<%= server.warehouse_id %>)</td>
        <td><%= button_to 'Mostrar', server, method: :get %></td>
        <td><%= button_to 'Editar', edit_server_path(server), method: :get %></td>
        <td><%= button_to 'Apagar', server, method: :delete, data: {confirm: 'Tem certeza?'} %></td>
      </tr>
  <% end %>
</table>

