<h1>Listing warehouses</h1>

<table style="text-align: center;">
  <tr>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.label %></td>
        <td><%= button_to 'Show', warehouse, method: :get %></td>
        <td><%= button_to 'Edit', edit_warehouse_path(warehouse), method: :get %></td>
        <td><%= button_to 'Destroy', warehouse, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<table>
  <tr>
    <td>
      <%= button_to 'New Warehouse', new_warehouse_path, method: :get %>
    </td>
    <td>
      <%= button_to 'Return', admin_path, method: :get %>
    </td>
  </tr>
</table>
